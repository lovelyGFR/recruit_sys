@import '../../style/weui.wxss';


::-webkit-scrollbar {

  width: 0;

  height: 0;

  color: transparent;

}




/*顶部滑块*/
.scrollx{
    display: flex;  /*水平居中*/  
    white-space: nowrap;  /*	文本不会换行，文本会在在同一行上继续，直到遇到 <br> 标签为止。*/
}




.scrollx view{
  display: inline-block; /*垂直居中，多个孩子共享一行*/
  padding-left: 20rpx;
  padding-right: 20rpx;
  background: #fff;
  color: black;
  font-family: "微软雅黑";
  font-size: 15px;
  padding-top: 10px;
  padding-bottom: 10px;
}


.bottom{
   position:relative; /*相对定位*/
   float: left;
   width: 100%;
   border-radius: 10rpx 10rpx;
}
.hx_bottomtext{
  display: block;
  position: relative;
  font-family: "微软雅黑";
  font-size: 15px;
  top: 10px;
  color: #ed5e53;
  margin-bottom: 20px;
  text-align: center;
}
/*控制地点列表的单行展示形式*/
.hxdoor{
  position: relative;
  display: flex; /*水平居中*/
  width: 100%;
  height: 50px;
}
/*控制单行图片位置*/
.hx_img{
  margin-right: 10px;
  float: left;
  width: 80px;
  height: 40px;
}
/*控制单行文字*/
.hxdoor_text{
  font-size: 16px;
  font-family: "微软雅黑";
  color:#333333;
  margin-left: 20rpx;
  margin-top: 5rpx;
}
/*控制go图标*/
.go{
  width:20px ;
  height:20px;
}

/*路线图标*/
.loadline{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  bottom: 100px;
  right: 50%;
  margin-right: -360rpx;
  background: #4188fe;
}

.loadlineimg {
  width: 40rpx;
  height: 40rpx;
  margin: 6px auto 2px;
}

.loadlinetext{
  text-align: center;
  color: #fff;
  font-size: 20rpx;
}

/*回到当前位置*/
 .rest{
  width:80rpx;
  height:80rpx;
  border-radius: 50%;
  position:absolute;
  bottom:40rpx;left:30rpx;
  background:#fff;
  border:1px solid #e7e7e7
  }
 .restimg{
  width:40rpx;
  height:40rpx;
  margin:20rpx auto;
  }

  /*搜索*/
.search{
  width:80rpx;
  height:80rpx;
  border-radius: 50%;
  position:absolute;
  bottom:140rpx;left:30rpx;
  background:#fff;
  border:1px solid #e7e7e7
  }
 .searchimg{
  width:40rpx;
  height:40rpx;
  margin:20rpx auto;
  }





