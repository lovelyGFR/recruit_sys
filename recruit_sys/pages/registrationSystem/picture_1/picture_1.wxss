/* pages/picture_1/picture_1.wxss */
/*选择图片View*/
page{
  width:  100%;
  height:  100%;
  background-color:  #f6f6f6;
}

.point_out{
  height: 30rpx;
  text-align: center;
  font-size: 30rpx;
  color: #333333;
  margin: 5rpx;
}

.content{
  height: 95vh;
  display: flex;
  flex-direction:  column;
  justify-content:  space-between;
}

.addImv{
    margin: 20rpx 20rpx;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
}
/*添加图片*/
.addImv .chooseView{
    width: 230rpx;
    height: 230rpx;
    background-color:#e5e5e5;
    display: flex;
    flex-direction: column;
    justify-content:  center;
    align-items:  center;
    padding: 0rpx 7rpx;
}
.addImv .chooseImv{
    width: 50rpx;
    height: 50rpx;
}
/*已选择的图片*/
.addImv .upFile{
    width: 230rpx;
    height:230rpx;
    position: relative;
    
}
.addImv .upFile .itemImv{
    width: 230rpx;
    height: 230rpx;
    padding: 0rpx 7rpx;
}
.addImv .upFile .closeImv{
    position: absolute;
    right: 0rpx;
    top: 0rpx;
    width: 50rpx;
    height:50rpx;
}

.button{
  margin-bottom: 50rpx 
}

.button_1::after{
  border:  none;
}

.button_1{
  width:  710rpx;
  height:  84rpx;
  border-radius:  40rpx;
 background: linear-gradient(to right, #49ADD6, #7A94ED);
  line-height:  84rpx;
  color:  #FFFFFF;
  font-size:  30rpx;
  font-family:  PingFang SC;
}

