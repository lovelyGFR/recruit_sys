/* pages/tyutintro/tyutintro.wxss */
/* 视频区 */
.tyutvideo{
  width: 100%;
  height: 400rpx;
}
video{
  width: 100%;
  height: 100%;
}
/*地图导航*/
.tyutintro_go{
   margin-left: 90%;
   margin-top: -30rpx;
}
._tyutintro_go{
     position: relative; /*子元素的相对定位*/
     width: 110rpx;
     height: 110rpx;
     font-size: 22rpx;
     background:#0492FF;
     color:white;
     margin-left: -80rpx;
     border-radius: 50%; /*控制圆形*/
     font-family: "微软雅黑";
    /*文字水平垂直居中*/
     display: flex;
     flex-direction: column;
     justify-content: center;
     align-items: center;
}

/*文字介绍*/
.tyutintro_text{
  width: 90%;
  margin:20rpx 40rpx;
}
.text1{
  margin-top: 10rpx; 
  font-size: 22px;
  font-family: "楷书";
  color:#0492FF;
  opacity: 0.8;
}
.text2{
  display: block;
  font-size: 16px;
  color:#1FBDF8;
  opacity: 0.5;
}
.text3{
  color: #888888;
  font-size: 14px;
  font-family: "楷书";
}