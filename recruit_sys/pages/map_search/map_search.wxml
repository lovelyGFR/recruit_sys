<!--pages/maps.wxml-->

<view class="container">
  <map id="myMap" style="width: 100%; height: 100vh;" scale="16" latitude="{{mapMsg.latitude}}" longitude="{{mapMsg.longitude}}" iconPath="../../images/location.png" show-location >

  <cover-view class="wrapper">
      <cover-image src='../../images/admin.png' class='admin' bindtap="toAdmin"></cover-image>
      <cover-view class="input" bindtap="bindSearch">搜索地点，公交，地铁</cover-view>
    
    <cover-view class="text">{{weatherMsg.temperature}}° {{weatherMsg.weather}} </cover-view>
  </cover-view>
  

  </map>
</view>

